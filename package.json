{
    "name": "makerlog-menubar",
    "version": "1.0.0",
    "description": "A menubar app for Makerlog",
    "author": {
        "name": "Ethan",
        "email": "me@ethan.link"
    },
    "dependencies": {
        "electron-builder": "^20.39.0",
        "menubar": "*"
    },
    "devDependencies": {
        "electron": "^4.0.0"
    },
    "main": "main.js",
    "scripts": {
        "pack": "electron-builder --dir",
        "build": "electron-builder",
        "start": "electron ."
    },
    "build": {
        "appId": "com.booligoosh.makerlog-menubar",
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "tar.gz"
            ],
            "darkModeSupport": true,
            "icon": "icon.Icns"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "dmg",
                "tar.gz",
                "snap",
                "rpm"
            ],
            "icon": "icon.png",
            "category": "Office"
        }
    }
}
