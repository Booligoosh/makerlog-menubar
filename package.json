{
    "name": "makerlog-menubar",
    "version": "1.0.0",
    "description": "A menubar app for Makerlog",
    "author": {
        "name": "Ethan",
        "email": "me@ethan.link"
    },
    "dependencies": {
        "menubar": "*",
        "yarn": "^1.15.2"
    },
    "devDependencies": {
        "electron": "^4.0.0",
        "electron-builder": "^20.39.0"
    },
    "main": "main.js",
    "scripts": {
        "pack": "electron-builder --dir",
        "linwin": "electron-builder -wl", 
        "mac": "electron-builder -m",    
        "start": "electron ."
    },
    "build": {
        "appId": "com.booligoosh.makerlog-menubar",
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "tar.gz"
            ],
            "darkModeSupport": true,
            "icon": "Icon.icns"
        },
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "Icon.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "dmg",
                "tar.gz",
                "snap",
                "rpm"
            ],
            "icon": "Icon.png",
            "category": "Office"
        }
    }
}
